<link href="/css/card.css"
      rel="stylesheet">

<div class="form-wrap">
  <h1 class="title"
      id="card">{{card.title}}</h1>
  <div class="image-wrap"><img src="/{{card.image}}"></div>


  <div class="dateAndViews"
       id="card">{{date}}
  </div>
  <div class="dateAndViews"
       id="card">Просмотрено: {{card.views}}
  </div>
  <div class="description"
       id="card">{{card.body}}
  </div>
  <div class="description"
       id="card">{{card.state}}
  </div>
  <h2 class="price"
      id="card">ЦЕНА: {{card.price}}</h2>
  <a href="/user/profile/:id"
     id="card">{{user}}</a>
  <div id="card">{{city}}</div>
  <button class="btn btn-primary"
          name="addToShopping"
          type="button">Добавить в корзину
  </button>
</div>
